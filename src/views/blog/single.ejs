<style>section {background-color: #f7f8f9;}</style>
<div id="posts" class="container post-container pt-5">
    <div class="row justify-content-center">
        <div class="post-header post-section col-12"><%= post.title %></div>
    </div>
    <div class="row justify-content-center my-5">
        <div class="post-section">
            <div class="profile-section d-flex">
                <img crossorigin="anonymous" src="<%= author.picture %>" alt="" width="45" height="45" class="rounded-circle my-auto me-3">
                <div class="">
                    <div class="post-author">by <span class="text-uppercase"><%= author.fullname || author.username %></span></div>
                    <div class="post-metadata d-flex">
                        <%= post.createdAt %>&nbsp;<span class="dot-separator mx-2"></span><%= translate('blog:read_time', {count: post.readTime}) %>
                    </div>
                </div>
            </div>
            <div class="social-share-section d-flex">

            </div>
        </div>
    </div>

    <% if (post.featuredImage) { %>
        <div class="row justify-content-center mb-2">
            <div class="post-image-section">
                <img src="<%= post.featuredImage %>" class="w-100" alt="">

            </div>
        </div>
    <% } %>

    <div class="row justify-content-center my-4">
        <div class="post-section overflow-auto">
            <%- post.content %>
        </div>
    </div>

    <% if (tags && tags.length) { %>
        <div class="row justify-content-center">
            <div class="post-section">
                <h5 class="text-capitalize"><%= translate('common:tags') %></h5>
                <div class="row px-2">
                    <% tags.forEach(tag => { %>
                        <a href="/tags/<%= tag.slug %>" class="col-auto badge badge-light text-black">#<%= tag.name %></a>
                    <% }) %>
                </div>
            </div>
        </div>
    <% } %>

    <div class="row justify-content-center mt-5">
        <div class="post-section d-flex">
            <div class="post-likes me-3"><%= translate('blog:like_count', {count: post.likes}) %></div>
            <div class="post-comments"><%= translate('blog:comment_count', {count: post.comments}) %></div>
        </div>
    </div>

    <div class="row justify-content-center my-5 px-4">
        <div class="post-section d-flex p-4 bg-white" style="border-radius: 8px;">
            <img src="<%= author.picture %>" alt="" width="90" height="90" class="rounded-circle my-auto me-3">
            <div class="about-author">
                <h4 class="author-name text-capitalize"><%= author.fullname || author.username %></h4>
                <div class="my-3" style="font-size: var(--font-size-12);"><%= translate('blog:about_author') %></div>
                <a href=""><%= translate('user:visit_profile') %></a>
            </div>
        </div>
    </div>

    <div class="row justify-content-center">
        <div class="post-section">
            <h5 class="text-capitalize"><%= translate('blog:comments') %></h5>
        </div>
        <div id="comments-section"></div>
    </div>
</div>