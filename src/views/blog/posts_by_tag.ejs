<div class="container">
    <div class="row py-5">
        <div class="col-12 d-flex mx-3 mb-3 justify-content-center">
            <a href="" class="badge text-black badge-light border-0 bg-light"><i class="fa fa-binoculars me-2" aria-hidden="true"></i><%= translate('common:explore') %></a>
            <% if (popularTags.length) { %>
             <% popularTags.forEach(elem => { %>
                <%- include('/blog/partials/tag_badge', {tag: elem, active: tag.tagId == elem.tagId}); -%>
             <% }) %>
            <% } %>
        </div>
        <% if (_breadcrumb.length) { %>
            <div class="col-12 text-center">
                <h2 class="text-normal mb-0" style="font-size: var(--font-size-36);">
                    <%= _breadcrumb[_breadcrumb.length - 1]['label'] %>
                </h2>
            </div>
        <% } %>

        <div class="col-12 text-black justify-content-center d-flex my-3">
            Topic
            <span class="dot-separator mx-2"></span>
            <%= tag.posts %> <%= translate('common:posts') %>
            <span class="dot-separator mx-2"></span>
            <%= tag.followers ?? 0 %> <%= translate('common:followers') %>
        </div>
        <div class="col-12 d-flex justify-content-center text-black">
            <button class="btn btn-primary button btn-sm follow"><%= translate('common:follow') %></button>
        </div>
    </div>
    <div class="posts-wrapper row mt-4 pb-0 posts-container">

        <% posts.forEach(post => { %>
                <%- include('/partials/post', {post: post}); -%>
        <% }) %>

    </div>
</div>