<style>.select2-container--default{z-index: 9999;}</style>
<div class="modal fade" id="create-post-dialog" tabindex="-1" aria-labelledby="create-post-dialogLabel" aria-hidden="true">
    <div class="modal-dialog modal-fullscreen">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title text-capitalize" id="create-post-dialogLabel">New Post</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
            <form id="post-form" class="create-post-">
                <div class="mb-3 form-floating">
                    <input type="text" name="title" style="text-transform: none;" class="form-control px-0 form-control-lg border-0 border-bottom" id="post-title" placeholder="Enter your post's title here">
                    <label for="post-title" id="post-title-label" style="left: unset;" class="form-label px-0">Enter your post's title here</label>
                  </div>
    
                <textarea id="editorarea" name="content"></textarea>

                <div class="form-group mt-2">
                  <select id="tags-selection" name="tags" multiple="multiple" tabindex="-1" class="uneditable-input form-select">
                      
                  </select>
              </div>
            </form>
        </div>
        <div class="modal-footer">
            <button class="btn btn-sm button-outlined mt-0"  data-bs-dismiss="modal">Discard</button>
            <button id="create-post" class="btn btn-sm text-white border-4 button-primary mt-0 ms-2">Create</button>
        </div>
      </div>
    </div>
  </div>