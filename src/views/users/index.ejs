<div class="container py-5">
    <div class="row justify-content-center user-listing-container">
    
        <% if (users && users.length) { %>
            <% users.forEach(element => { %>
                <div class="card p-0 shadow border m-3">
                    <div class="user mt-4 mb-2 text-center">
                      <div class="profile d-flex justify-content-center w-100">
                        <img crossorigin="anonymous" data-onerror="/images/default-user.jpg" onerror="core.imageOnError(this)" src="<%= element.picture %>" class="rounded-circle" width="80">
                      </div>
                    </div>
    
                    <div class="mt- px-3 text-center position-relative  ">
                      <h5 class="mb-0 user-name" style="text-transform: none;">
                        <%= element.fullname || element.username %>
                      </h5>
                      <span class="text-muted text-ellipse-2 px-3 mb-2">
                        <%= element.about %>
                      </span>

                      <div class="position-absolute w-100" style="top: 75px;left: 0;">
                        <div class="d-flex mt-2 justify-content-evenly">
                          <a href="/users/<%= element.username %>" class="btn pt-2 btn-primary button-outlined btn-sm">Visit Profile</a>
                        </div>
                        <div class="d-flex justify-content-between align-items-center mt-4 px-4">
                          <div class="stats">
                            <h6 class="mb-0">Followers</h6>
                            <span><%= element.followers %></span>
                          </div>
                          <div class="stats">
                            <h6 class="mb-0">Posts</h6>
                            <span>142</span>
                          </div>
                        </div>
                      </div>
    
                    </div>
    
                   </div>
            <% }) %>
        <% } %>
    
    </div>
</div>