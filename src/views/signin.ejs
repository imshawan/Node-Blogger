    <main class="main">
        <div class="container">
            <section class="col-12 col-md-6 col-lg-5 wrapper">
                <div class="heading">
                    <h1 class="text text-large">Sign In</h1>
                    <p class="text text-normal">New user? <span><a href="/register" class="text text-links">Create an account</a></span>
                    </p>
                </div>
                <div id="errors-area" class="alert alert-danger alert-dismissible fade show" role="alert" style="display: none;">
