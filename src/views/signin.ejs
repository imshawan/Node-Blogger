                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
                <form id="signin-form" name="signin" class="form">
                    <div class="input-control">
                        <label for="usernameOrEmail" class="input-label">Username or email address</label>
                        <input name="username" id="usernameOrEmail" class="input-field" placeholder="Username or email address">
                    </div>
                    <div class="input-control position-relative">
                        <label for="password-input" class="input-label">Password</label>
                        <div class="d-flex position-relative">
                            <input type="password" name="password" id="password-input" class="input-field" placeholder="Password">
                            <div class="h-100 position-absolute d-flex password-show-toggle">
                                <i class="fa fa-eye align-self-center" aria-hidden="true"></i>
                            </div>
                        </div>
                    </div>
                    <div class="input-control d-flex justify-content-start">
                        <input type="checkbox" name="rememberme" id="rememberme" class="">
                        <label for="rememberme" class="input-label mx-2">Remember me for a longer duration</label>
                    </div>
                    <div class="input-control">
                        <a href="#" class="text">Forgot Password</a>
                    </div>
                    <div class="input-control">
                    </div>
                    <button type="submit" class="input-submit mt-0 w-100 button-black">Sign In</button>
                </form>
