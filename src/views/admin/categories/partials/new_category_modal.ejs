<div class="modal fade" id="new-category-modal" data-bs-backdrop="static" data-bs-keyboard="false"
    aria-labelledby="new-category-modal-Label" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title" id="new-category-modal-Label">Create new category</h4>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">

                <form action="" id="new-category-modal-form">
                    <div class="form-group">
                        <label>Category name</label>
                        <input type="text" required name="name" class="form-control" placeholder="Enter name">
                    </div>
                    <div class="form-group">
                        <label>Choose parent category (optional)</label>
                        <select id="parent-cid-selection" tabindex="-1" class="form-control" placeholder="Select...">
                            
                        </select>
                    </div>

                    <div class="d-inline-flex w-100 justify-content-end">
                        <button type="button" redirect-to-create class="btn btn-link btn-fw">More options</button>
                        <button type="submit" id="create-category-btn" class="btn btn-primary">Create</button>
                    </div>
                </form>

            </div>
        </div>
    </div>
</div>