<div class="container pt-5">
    <div class="main-body">

        <div class="row gutters-sm">
            <div class="col-md-4 mb-3">
                <div class="card">
                    <div class="card-body">
                        <div class="d-flex flex-column align-items-center text-center">
                            <canvas id="category-icon" width="128" height="128" class="rounded-circle" width="150"></canvas>

                            <div class="mt-3 w-100">
                                <div class="">
                                    <button class="btn btn-primary">
                                        <i class="fa fa-upload" aria-hidden="true"></i>
                                        Upload image
                                    </button>
                                    <button class="btn btn-danger ms-2">
                                        <i class="fa fa-trash" aria-hidden="true"></i>
                                        Remove
                                    </button>
                                </div>

                                <form class="my-2 mt-3">
                                    <div class="mb-3 form-floating">
                                        <input type="text" name="name" class="form-control form-control-sm" id="nameInout"
                                            placeholder="Enter the name of the new category">
                                        <label for="nameInout" class="form-label">Alternative text</label>
                                        <div id="" class="form-text text-start">Alternative text, if there is problem loading image
                                        </div>
                                    </div>
                                </form>
                                
                            </div>
                        </div>
                    </div>
                </div>

                <div class="card mt-3">
                    <h5 class="p-3 pb-0">Manage category</h5>
                    <ul class="list-group-flush px-0">
                        <li class="list-group-item my-3 d-flex justify-content-center align-items-center flex-wrap">
                            <button class="btn btn-primary shadow py-2 w-75">
                                <i class="fa fa-eye" aria-hidden="true"></i>
                                View as visitor
                            </button>
                        </li>

                        <li class="list-group-item my-3 d-flex justify-content-center align-items-center flex-wrap">
                            <button class="btn btn-primary shadow py-2 w-75">
                                <i class="fa fa-cogs" aria-hidden="true"></i>
                                Edit permissions
                            </button>
                        </li>

                        <li class="list-group-item my-3 d-flex justify-content-center align-items-center flex-wrap">
                            <button class="btn btn-primary shadow py-2 w-75">
                                <i class="fa fa-lock" aria-hidden="true"></i>
                                Lock category
                            </button>
                        </li>

                        <li class="list-group-item my-3 d-flex justify-content-center align-items-center flex-wrap">
                            <button class="btn btn-danger shadow py-2 w-75">
                                <i class="fa fa-trash" aria-hidden="true"></i>
                                Delete category
                            </button>
                        </li>

                    </ul>
                </div>
            </div>
            <div class="col-md-8">
                <div class="card mb-3">
                    <div class="card-body">

                        <form class="">
                            <div class="mb-3 form-floating">
                                <input type="text" name="name" class="form-control" id="nameInout"
                                    placeholder="Enter the name of the new category">
                                <label for="nameInout" class="form-label">Category name</label>
                                <div id="" class="form-text">You can choose a unique name for this category
                                </div>
                            </div>
                            <div class="mb-3">
                                <label for="decriptionTextarea" class="form-label">Category description</label>
                                <textarea class="form-control" rows="4" id="decriptionTextarea"></textarea>
                                <div id="" class="form-text">You can add a description of the category of about 50
                                    words.
                                </div>
                            </div>

                            <div class="row justify-content-between">
                                <div class="form-floating col-12 col-md-6 mb-3">
                                    <input type="text" name="minTagsPerPost" placeholder="Enter a number"
                                        class="form-control" id="minTags">
                                    <label for="minTags" style="left: unset;" class="form-label">Minimum tags per
                                        post</label>
                                    <div id="" class="form-text">Minumum tags required to create a post
                                    </div>
                                </div>
                                <div class="form-floating col-12 col-md-6 mb-3">
                                    <input type="text" name="maxTagsPerPost" placeholder="Enter a number"
                                        class="form-control" id="maxTags">
                                    <label for="maxTags" style="left: unset;" class="form-label">Maximum tags per
                                        post</label>
                                    <div id="" class="form-text">Limits a user to use only a limited number of tags
                                    </div>
                                </div>
                            </div>

                            <div class="form-floating mb-3">
                                <input type="text" name="tags" placeholder="Create tags for the selected category"
                                    class="form-control" id="tagsInput">
                                <label for="tagsInput" class="form-label">Create tags</label>
                                <div id="" class="form-text">This tags will be visible to the users while they create post in this category
                                </div>
                            </div>

                            <div class="row mx-0 justify-content-end">
                                <button type="submit" class="btn btn-primary py-2 w-25">
                                    <i class="fa fa-floppy-o" aria-hidden="true"></i>
                                    Save
                                </button>
                            </div>
                        </form>
                    </div>
                </div>

            </div>
        </div>

    </div>
</div>