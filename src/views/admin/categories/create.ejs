<div class="row gutters-sm mb-3">
    <div class="col-md-8 col-lg-8">
        <div class="card mb-3">
            <h5 class="p-3 card-header"><%= translate('admin.category:category_info') %></h5>
            <div class="card-body">

                <form class="" id="category-form">
                    <div class="mb-3 form-floating">
                        <input type="text" name="name" class="form-control" id="nameInout"
                            placeholder="<%= translate('admin.category:enter_category_name') %>">
                        <label for="nameInout" class="form-label"><%= translate('admin.category:category_name') %></label>
                        <div id="" class="form-text"><%= translate('admin.category:category_name_help') %></div>
                    </div>
                    <div class="mb-3">
                        <label for="decriptionTextarea" class="form-label"><%= translate('admin.category:category_description') %></label>
                        <textarea class="form-control" name="description" rows="4" id="decriptionTextarea"></textarea>
                        <div id="" class="form-text"><%= translate('admin.category:category_description_help') %></div>
                    </div>

                    <div class="row justify-content-between">
                        <div class="form-floating col-12 col-md-6 mb-3">
                            <input type="text" name="tagsPerPost[min]" placeholder="<%= translate('admin.category:enter_number') %>" class="form-control"
                                id="minTags">
                            <label for="minTags" style="left: unset;" class="form-label"><%= translate('admin.category:minimum_tags_per_post') %></label>
                            <div id="" class="form-text"><%= translate('admin.category:minimum_tags_help') %></div>
                        </div>
                        <div class="form-floating col-12 col-md-6 mb-3">
                            <input type="text" name="tagsPerPost[max]" placeholder="<%= translate('admin.category:enter_number') %>" class="form-control"
                                id="maxTags">
                            <label for="maxTags" style="left: unset;" class="form-label"><%= translate('admin.category:maximum_tags_per_post') %></label>
                            <div id="" class="form-text"><%= translate('admin.category:maximum_tags_help') %></div>
                        </div>
                    </div>

                    <div class="form-floating mb-3">
                        <select name="parent" class="form-control" id="parent-cid-selection"></select>
                        <div id="" class="form-text"><%= translate('admin.category:parent_category_help') %></div>
                    </div>

                    <div class="row mx-0 justify-content-end">
                        <button type="submit" class="btn float-right-btn btn-primary py-2">
                            <i class="fa fa-floppy-o" aria-hidden="true"></i>
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <div class="col-md-4 col-lg-4 mb-3">
        <div class="card h-100">
            <h5 class="p-3 card-header"><%= translate('admin.category:category_picture') %></h5>
            <div class="card-body">
                <div class="d-flex flex-column align-items-center text-center">
                    <div class="category-image-area">
                        <canvas id="category-icon" width="128" height="128" class="rounded-circle d-none"></canvas>
                        <img id="categoryimage" src="" accept="image/*" style="
                                height: 140px;
                                width: 140px;
                                object-fit: cover;
                                border-radius: 100%;" 
                            onerror="this.onerror=null;this.src='/images/default-image.jpeg';" />
                    </div>

                    <div class="mt-3 w-100">
                        <div class="row px-2 justify-content-center">
                            <button id="upload-category-image" class="btn btn-inverse-dark col-auto m-1 px-4">
                                <i class="fa fa-upload" aria-hidden="true"></i>
                                <%= translate('admin.common:upload') %>
                            </button>

                            <input type="file" class="d-none" id="category-image">

                            <button class="btn btn-danger col-auto m-1 px-4">
                                <i class="fa fa-trash" aria-hidden="true"></i>
                                <%= translate('admin.common:remove') %>
                            </button>
                        </div>

                        <form class="my-2 mt-3">
                            <div class="mb-3">
                                <label for="nameInout" class="form-label w-100 text-start"><%= translate('admin.category:image_text') %></label>
                                <input type="text" name="name" class="form-control" id="nameInout"
                                    placeholder="<%= translate('admin.category:alt_text_placeholder') %>">
                                <div id="" class="form-text text-start"><%= translate('admin.category:alt_text_help') %></div>
                            </div>
                        </form>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
